1) urls ni router ga otkazish
2) categories fake data toldirish
3) testlarni qarab chiqish (serializer larni togrilash)
4) makefile ni togrilab qoyish


gunicorn, uwsgi
daphne

/etc/nginx/sites-enabled/digital-ecommerce

server {
    listen [::]:80;
    server_name digital-ecommerce.online www.digital-ecommerce.online;

    location = /favicon.ico { access_log off; log_not_found off; }

    location /static/ {
        root /var/www/digital-ecommerce;
    }

    location /media/ {
        root /var/www/digital-ecommerce;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/var/www/digital-ecommerce/digital-ecommerce.sock;
    }
}


server {
    listen 80;
    server_name static.digital-ecommerce.online www.static.digital-ecommerce.online;

    location /static/ {
        root /var/www/digital-ecommerce;
    }
}

digital-ecommerce.online
api.digital-ecommerce.online
static.digital-ecommerce.online
media.digital-ecommerce.online





/etc/systemd/system/digital-ecommerce.service


[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/www/digital-ecommerce
ExecStart=/root/.cache/pypoetry/virtualenvs/digital-ecommerce-gFegOML8-py3.10/bin/gunicorn --bind unix:/var/www/digital-ecommerce/digital-ecommerce.sock root.wsgi:application

[Install]
WantedBy=multi-user.target



systemctl start (service_fayl_nomi).service
systemctl enable (service_fayl_nomi).service
